{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "layouts/*": ["./src/layouts/*"],
      "views/*": ["./src/views/*"],
      "apis/*": ["./src/apis/*"],
      "components/*": ["./src/components/*"],
      "directives/*": ["./src/directives/*"],
      "hooks/*": ["./src/hooks/*"],
      "router/*": ["./src/router/*"],
      "stores/*": ["./src/stores/*"],
      "styles/*": ["./src/styles/*"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
